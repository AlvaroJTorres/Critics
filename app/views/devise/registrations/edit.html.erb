<section class="section--xs">
  <div class="container">
    <h2 class="heading heading--sm text-center mb-16">Edit <%= resource_name.to_s.humanize %></h2>
    <div class="user-form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="input">
          <%= f.label :username, class: "content--xs overline" %>
          <div class="input__container">
            <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "input__content" %>
          </div>
        </div>

        <div class="input">
          <%= f.label :email, class: "content--xs overline" %>
          <div class="input__container">
            <%= f.email_field :email, autocomplete: "email", class: "input__content" %>
          </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="input">
          <%= f.label :password, class: "content--xs overline" %> <i>(leave blank if you don't want to change it)</i><br />
          <div class="input__container">
            <%= f.password_field :password, autocomplete: "new-password", class: "input__content" %>
          </div>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="input">
          <%= f.label :password_confirmation %>
          <div class="input__container">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input__content" %>
          </div>
        </div>

        <div class="input">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <div class="input__container">
            <%= f.password_field :current_password, autocomplete: "current-password", class: "input__content" %>
          </div>
        </div>

        <%= f.submit "Update", class:"btn btn--primary full-width" %>
      <% end %>
      <%= link_to "Back", :back, class: "text-center" %>
    </div>
      
  </div>
</section>
