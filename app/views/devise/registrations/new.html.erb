<section class="section--xs">
  <div class="container">
    <h2 class="heading heading--sm text-center mb-16">Create an account</h2>
    <div class="user-form">
      <p class="overline text-center" >Continue with</p>
      
      <div class="social-buttons">
        <%= link_to "Github", user_github_omniauth_authorize_path, method: :post, class: "btn btn--secondary" %>
        <%= link_to "Twitter", user_twitter_omniauth_authorize_path, method: :post, class: "btn btn--secondary" %>
      </div>

      <span class="overline text-center" >Or</span>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" }) do |f| %>
      <div class="input">
        <%= f.label :username, class: "content--xs overline" %>
        <div class="input__container">
          <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "sample", class: "input__content" %>
        </div>
        <% if resource.errors.messages[:username].any? %>
          <span class="content--sm input__error-message">
            <%=resource.errors.messages[:username].join(", ") %>
          </span>
        <%end%>
      </div>

      <div class="input">
        <%= f.label :email, class: "content--xs overline" %>
        <div class="input__container">
          <%= f.email_field :email, autocomplete: "email", placeholder: "example@mail.com", class: "input__content" %>
        </div>
        <% if resource.errors.messages[:email].any? %>
          <span class="content--sm input__error-message">
            <%=resource.errors.messages[:email].join(", ") %>
          </span>
        <%end%>
      </div>

      <div class="input">
        <%= f.label :password, class: "content--xs overline" %>
        <div class="input__container">
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "******", class: "input__content" %>
        </div>
        <% if resource.errors.messages[:password].any? %>
          <span class="content--sm input__error-message">
            <%=resource.errors.messages[:password].join(", ") %>
          </span>
        <%end%>
      </div>

      <div class="input">
        <%= f.label :password_confirmation, class: "content--xs overline" %>
        <div class="input__container">
          <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", placeholder: "******", class: "input__content" %>
        </div>
        <% if resource.errors.messages[:password_confirmation].any? %>
          <span class="content--sm input__error-message">
            <%=resource.errors.messages[:password_confirmation].join(", ") %>
          </span>
        <%end%>
      </div>

      <%= f.submit "Sign up", class:"btn btn--primary full-width" %>
      <% end %>
      <p class="content--sm text-center">Already a member?</p>
      <%=link_to "Sign in", new_user_session_path, class: "text-center" %>
    </div>
  </div>
</section>
