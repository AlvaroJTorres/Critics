<div class="card">
  <%= image_tag company.cover, class: "card-image" %>
  <div class="card-content">
    <div class="card-header">
      <div>
        <%= link_to company_path(company) do %>
          <h3 class="card-title content--lg"><%= company.name %></h3>
        <% end %>
        <span class="card-subtitle content--xs"><%= company.start_date&.year%> - <%= company.country%></span>
      </div>
    </div>
    <div class="card-body">
      <p class="card-description content--xs">
        <%= format_description(company.description) %>
      </p>
    </div>
    <div class="card-footer content--xs">

      <span class="card-games-count"><%= company.games.count == 1 ? "1 Game" : "#{company.games.count} Games" %></span>

      <% if policy(company).update? %>
        <div class="card-actions">
          <a href="<%= edit_company_path(company)%>">
            <svg xmlns="http://www.w3.org/2000/svg" class="card-action" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
          </a>
          <a rel="nofollow" data-method="delete" href="<%= company_path(company)%>">
            <svg xmlns="http://www.w3.org/2000/svg" class="card-action" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</div>    